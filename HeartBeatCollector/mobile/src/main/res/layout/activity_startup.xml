<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Heart Rate Simulation"
            android:layout_width="wrap_content"
            android:onClick="connect"
            android:layout_height="wrap_content"
            android:layout_marginStart="98dp"
            android:id="@+id/button_heartRateSimulation"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Heart Rate Real"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="sensor"
            android:layout_marginEnd="123dp"
            android:id="@+id/button_heartRateReal"
            android:layout_alignBaseline="@+id/button_heartRateSimulation"
            android:layout_alignBottom="@+id/button_heartRateSimulation"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>